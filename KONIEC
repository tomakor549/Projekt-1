// ConsoleApplication12.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include <fstream>
#include <string>
#include <algorithm>
#include <math.h>
using namespace std;

void wstawianie(int size, int t[])
{
	ofstream txt;
	txt.open("wczytaj.txt", ios::app);

	int x;
	int i;
	for (int j = size - 2; j >= 0; j--)
	{
		x = t[j];
		i = j + 1;
		while ((i < size) && (x > t[i]))
		{
			t[i - 1] = t[i];
			i++;
		}
		t[i - 1] = x;
	}

	for (i = 0; i < size;i++)
	{
		cout << t[i] << " ";
		txt << t[i] << " ";
	}
	cout << endl;
	txt << endl;
	txt.close();
}

void wybor(int size, int t[])
{
	ofstream txt;
	txt.open("wczytaj.txt", ios::app);

	int i;
	int j;
	int min;

	for (j = 0; j < size-1; j++)
	{
		min = j;
		for (i=j+1; i < size; i++)
		{
			if (t[min] > t[i])
			{
				min = i;
			}
			swap(t[min], t[j]);
		}
	}
		

	for (int i = 0; i < size; i++)
	{
		cout << t[i] << " ";
		txt << t[i] << " ";
	}
	cout << endl;
	txt << endl;
	txt.close();
}

void glupie(int size, int t[])
{

	ofstream txt;
	txt.open("wczytaj.txt", ios::app);

	int i = 0;
	do
	{
		if (t[i] > t[i + 1])
		{
			swap(t[i], t[i + 1]);
			i = 0;
			continue;
		}
		i++;
	} while (i < size - 1);

	for (int i = 0; i < size; i++)
	{
		cout << t[i] << " ";
		txt << t[i] << " ";
	}

	cout << endl;
	txt << endl;
	txt.close();
}

void glowna(char sorttype)
{
	ifstream plik;
	plik.open("odczytaj.txt");

	string zmienna;
	const char *c;
	int size;
	int i = 0;
	int j = 0;
	int k = 0;
	int z = 0;
	int a = 1;
	int tab[50] = { 0 };
	int t[50] = { 0 };

	if (!plik.good())							//sprawdzenie poprawności pliku (czy jest, czy nie)
		std::cout << "błąd";

	while (getline(plik, zmienna))
	{
		c = zmienna.c_str();
		size = zmienna.length();

		while (i < size)
		{

			if (c[i] == '-')
			{
				a = -1;
				i++;
			}

			if (c[i] != ' ' && c[i] != ',')
			{
				t[j] = c[i] - '0';
				i++;
				j++;
			}
			else
			{
				i--;
				j--;

				while (j >= 0)
				{
					tab[k] = a*t[j] * pow(10, z) + tab[k];
					j--;
					z++;
				}

				k++;
				j = 0;
				i = i + 2;
				z = 0;
				a = 1;

			}

		}
		//=============================================================================================
	switch (sorttype)
	{
		case('a'):
		{
			wstawianie(k, tab);
			break;
		}
		case('b'):
		{
			wybor(k, tab);
			break;
		}
		case('c'):
		{
			glupie(k, tab);
			break;
		}
		default:
		{
			break;
		}
	}

		for (k; k >= 0; k--)
		{
			tab[k] = 0;
			t[k] = 0;
		}
		//=============================================================================================

		i = 0;
		j = 0;
		k = 0;
		z = 0;
	}
	if (sorttype!='a' && sorttype != 'b' && sorttype != 'c')
	{
		cout << "ekchem, cos zle wpisano";
	}
}


int main()
{
	using namespace std;

	char a;

	cout << "wybierz typ sortowania. Odpowiednio: " << endl;
	cout << "a - sortowanie przez wstawianie" << endl;
	cout << "b - sortowanie przez wybor" << endl;
	cout << "c - sortowanie przez glupie" << endl;
	cin >> a;

	cout << "Posortowane liczby:" << endl;
	glowna(a);

    return 0;
}

